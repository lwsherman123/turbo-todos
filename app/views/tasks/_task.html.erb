<turbo-frame id="<%= dom_id task %>" class="block">
<div class="block">
  <%= form_with(model: task, class:"text-lg inline-block my-3 w-72") do |form| %>
    <%= form.check_box :completed,
                        data: {
                         id: task.id,
                         action: "tasks#toggle"
                       },
                       class: "w-4 h-4 rounded-full border border-slate-300 hover:cursor-pointer hover:border-none hover:bg-[#0279FF]/20 focus:ring-0 focus:ring-white" %>
    <%= link_to edit_task_path(task) do %>                   
    <%= task.name %>
    <% if task.desc.present? || task.date.present? %>
    <p class="text-xs"> <%= task.desc %>  ||   <%= task.date %></p>
    <% end %>
    <% end %>
  <% end %>


  <div class="inline-block ml-2">
    <%= button_to "Delete", task_path(task),
                  method: :delete,
                  data: { "turbo-frame": "_top" } %>
  </div>

</div>
 </turbo-frame>